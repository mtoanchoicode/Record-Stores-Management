extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center 
            .col-lg-8 
                h1.text-center Register 
                form(
                    action="/user/register"
                    method="POST"
                )
                    .mb-3
                        label.form-label(for="fullName") Full Name
                        input.form-control(
                            type="text"
                            id="fullName"
                            name="fullName"
                            required
                        )
                    .mb-3
                        label.form-label(for="email") Email
                        input.form-control(
                            type="email"
                            id="email"
                            name="email"
                            required
                        )
                    .mb-3
                        label.form-label(for="password") Password
                        input.form-control(
                            type="password"
                            id="password"
                            name="password"
                            required
                        )
                    .d-grid
                        button.btn.btn-primary.btn-block(
                            type="submit"
                        ) Register
